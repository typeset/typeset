@model Typeset.Web.Models.Home.HomeViewModel

<section class="about">
@if (!String.IsNullOrWhiteSpace(Model.About.Email))
{
    <section class="avatar">
        @Gravatar.GetHtml(Model.About.Email, 75, null, GravatarRating.X, "jpg")
    </section>
}
@if (@Model.About.HasName())
{
    <section class="name">
        <p>@Model.About.Name()</p>
    </section>
}
@if (!String.IsNullOrWhiteSpace(Model.About.Bio))
{
    <section class="bio">
        <p>@Model.About.Bio</p>
    </section>
}
@if (!String.IsNullOrWhiteSpace(Model.About.Email))
{
    <section class="email">
        <p>@Html.EmailLink(Model.About.Email, "Email")</p>
    </section>
}
@if (Model.About.HasGithubUsername())
{
    <section class="github">
        <p><a href="@Model.About.GithubUrl()">Github</a></p>
    </section>
}
@if (Model.About.HasTwitterUsername())
{
    <section class="twitter">
        <p><a href="@Model.About.TwitterUrl()">twitter</a></p>
    </section>
}
</section>
<section id="content">
    <ul class="posts">
    @foreach (var post in Model.Posts.Entities)
    {
        <li class="post">
            <span class="date">@Html.FormatDate(post.Date)</span>
            <span class="title">@post.Title</span>
        </li>
    }
    </ul>
</section>