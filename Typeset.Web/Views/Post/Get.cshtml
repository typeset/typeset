@model Typeset.Web.Models.Posts.PageOfPostViewModel

<section class="row-fluid">
    <div class="span2">
        @Html.GenerateAbout(Model.About)
    </div>
    <section class="content span8">
        <section class="post">
            @Html.Raw(Model.Post.HtmlContent)
        </section>
        <hr />
        <section class="comments">
            @Html.GenerateComments(Model.Configuration)
        </section>
    </section>
</section>