@model Typeset.Web.Models.Posts.PageOfPostViewModel
@{ ViewBag.Title = Model.Post.Title; }

@Html.GenerateAbout(Model.About)
<article class="post">
    <header>
        <h1 class="title">@Model.Post.Title</h1>
        <time class="pubdate" pubdate="pubdate" datetime="@Html.MarkupDate(Model.Post.Date)">@Html.FormatDate(Model.Configuration, Model.Post.Date)</time>
    </header>
    <section class="body">
        @Html.Raw(Model.Post.HtmlContent)
    </section>
    <section class="comments">
        @Html.GenerateComments()
    </section>
</article>